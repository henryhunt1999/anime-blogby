

<h1>Anime Blogby</h1>

<%= link_to 'Create Your Own', new_article_path, class: 'create-link-one' %>

<table>
  <tr>
    <th>Article</th>
    <th>Article Text</th>
    <th>See</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
      <td class="table-title"><%= article.title %></td>
      <td class="table-text"><%= article.text %></td>
      <td><%= link_to 'S', article_path(article), class: 'button' %></td>
      <td><%= link_to 'E', edit_article_path(article), class: 'button' %></td>
      <td class="table-link"><%= link_to 'D', article_path(article),
              method: :delete, class: 'button',
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Create Your Own', new_article_path, class: 'create-link-two' %>
